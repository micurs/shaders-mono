{
  "name": "shaders-mono",
  "version": "1.0.0",
  "packageManager": "pnpm@10.7.0",
  "description": "An evolving exploration into the realms of WebGPU API and geometric programming using TypeScript.",
  "main": "index.js",
  "scripts": {
    "build:all": "turbo run build",
    "build:shared": "turbo run build --filter=@shaders-mono/geopro && turbo run build --filter=@shaders-mono/webgpu",
    "build:demo1": "turbo run build --filter=demo-01",
    "build:demo2": "turbo run build --filter=demo-02",
    "build:demo3": "turbo run build --filter=demo-03",
    "dev:shared": "turbo run dev --filter=@shaders-mono/webgpu",
    "dev:demo4": "concurrently --names \"shared,demo-04\" --prefix-colors \"blue,green\" \"pnpm dev:shared\" \"turbo run dev --filter=demo-04\"",
    "dev:demo3": "concurrently --names \"shared,demo-03\" --prefix-colors \"blue,green\" \"pnpm dev:shared\" \"turbo run dev --filter=demo-03\"",
    "dev:demo2": "concurrently --names \"shared,demo-02\" --prefix-colors \"blue,green\" \"pnpm dev:shared\" \"turbo run dev --filter=demo-02\"",
    "dev:demo1": "concurrently --names \"shared,demo-01\" --prefix-colors \"blue,green\" \"pnpm dev:shared\" \"turbo run dev --filter=demo-01\"",
    "test:shared": "turbo run test --filter=@shaders-mono/geopro",
    "start:cli": "node demos/cli/dist/geopro.js",
    "deploy:pages": "pnpm build:all && mkdir -p docs && rimraf docs/* && turbo run pages:deploy --filter=demo-01 && turbo run pages:deploy --filter=demo-02 && turbo run pages:deploy --filter=demo-03 && cp pages/* docs",
    "serve:pages": "serve docs",
    "lint": "turbo run lint",
    "clean": "turbo clean"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "turbo": "latest",
    "@swc-node/register": "~1.6.8",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.95",
    "@testing-library/react": "14.0.0",
    "@types/node": "24.0.13",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.9",
    "@types/react-is": "18.2.2",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "~4.0.4",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-c8": "~0.32.4",
    "@vitest/ui": "~0.32.4",
    "@webgpu/types": "^0.1.38",
    "autoprefixer": "10.4.13",
    "babel-plugin-styled-components": "1.10.7",
    "concurrently": "^8.2.2",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "~22.1.0",
    "postcss": "8.4.21",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "tailwindcss": "3.2.7",
    "typescript": "~5.8.3",
    "vite": "~4.3.9",
    "vite-plugin-checker": "^0.6.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@swc/helpers": "~0.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "styled-components": "5.3.6"
  }
}
