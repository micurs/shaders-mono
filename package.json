{
  "name": "shaders-mono",
  "version": "1.0.0",
  "description": "An evolving exploration into the realms of WebGPU API and geometric programming using TypeScript.",
  "main": "index.js",
  "scripts": {
    "build:all": "nx run-many --all --target=build",
    "build:shared": "nx build @shaders-mono/geopro && nx build @shaders-mono/webgpu ",
    "build:demo1": "nx run demo-01:build",
    "build:demo2": "nx run demo-02:build",
    "build:demo3": "nx run demo-03:build",
    "dev:shared": "nx run-many --projects=@shaders-mono/webgpu --target=dev",
    "dev:demo3": "nx dev demo-03",
    "dev:demo2": "nx run demo-02:serve",
    "dev:demo1": "nx dev demo-01",
    "test:shared": "nx test @shaders-mono/geopro",
    "start:cli": "node demos/cli/dist/geopro.js",
    "deploy:pages": "pnpm build:all && mkdir -p docs && rimraf docs/* && nx run demo-01:pages:deploy && nx run demo-02:pages:deploy && nx run demo-03:pages:deploy && cp pages/* docs",
    "serve:pages": "serve docs"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
